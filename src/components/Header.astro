---
const navItems = [
  { name: "Home", url: "/" },
  { name: "About", url: "/#about" },
  { name: "Services", url: "/#services" },
  { name: "Products", url: "/#products" },
  { name: "Contact", url: "/#contact" }
];
---

<header class="fixed w-full z-50 transition-all duration-300" id="navbar">
  <div class="container mx-auto px-4 py-4">
    <div class="flex justify-between items-center">
      <a href="/" class="text-xl md:text-2xl font-bold text-primary-700 flex items-center">
        <span class="font-heading">N.A. Engineering</span>
      </a>
      
      <nav class="hidden md:flex space-x-6">
        {navItems.map(item => (
          <a href={item.url} class="text-gray-700 hover:text-primary-600 transition-colors font-medium">
            {item.name}
          </a>
        ))}
        <a href="/#contact" class="bg-primary-600 text-white px-4 py-2 rounded hover:bg-primary-700 transition-colors">
          Get a Quote
        </a>
      </nav>
      
      <button id="mobile-menu-button" class="md:hidden text-gray-700 focus:outline-none">
        <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-6 h-6">
          <path stroke-linecap="round" stroke-linejoin="round" d="M3.75 6.75h16.5M3.75 12h16.5m-16.5 5.25h16.5" />
        </svg>
      </button>
    </div>
  </div>
  
  <!-- Mobile Menu -->
  <div id="mobile-menu" class="hidden md:hidden bg-white w-full border-t border-gray-200">
    <div class="container mx-auto px-4 py-4">
      <div class="flex flex-col space-y-4">
        {navItems.map(item => (
          <a href={item.url} class="block py-2 text-gray-700 hover:text-primary-600 transition-colors text-lg">
            {item.name}
          </a>
        ))}
        <a href="/#contact" class="bg-primary-600 text-white px-4 py-3 rounded text-center hover:bg-primary-700 transition-colors text-lg">
          Get a Quote
        </a>
      </div>
    </div>
  </div>
</header>

<script is:inline>
  document.addEventListener('DOMContentLoaded', () => {
    const mobileMenuButton = document.getElementById('mobile-menu-button');
    const mobileMenu = document.getElementById('mobile-menu');
    
    mobileMenuButton.addEventListener('click', () => {
      mobileMenu.classList.toggle('hidden');
    });
    
    // Handle navbar transparency
    const navbar = document.getElementById('navbar');
    
    window.addEventListener('scroll', () => {
      if (window.scrollY > 50) {
        navbar.classList.add('bg-white', 'shadow-md');
        navbar.classList.remove('bg-transparent');
      } else {
        navbar.classList.remove('bg-white', 'shadow-md');
        navbar.classList.add('bg-transparent');
      }
    });
    
    // Initial check
    if (window.scrollY > 50) {
      navbar.classList.add('bg-white', 'shadow-md');
    } else {
      navbar.classList.add('bg-transparent');
    }
    
    // Close mobile menu when clicking on links
    const mobileLinks = mobileMenu.querySelectorAll('a');
    mobileLinks.forEach(link => {
      link.addEventListener('click', () => {
        mobileMenu.classList.add('hidden');
      });
    });
  });
</script>