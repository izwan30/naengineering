---
import Layout from '../../layouts/Layout.astro';

const images = [
  "https://images.pexels.com/photos/4062567/pexels-photo-4062567.jpeg?auto=compress&cs=tinysrgb&w=1260&h=750&dpr=2",
  "https://images.pexels.com/photos/2760243/pexels-photo-2760243.jpeg?auto=compress&cs=tinysrgb&w=1260&h=750&dpr=2",
  "https://images.pexels.com/photos/257736/pexels-photo-257736.jpeg?auto=compress&cs=tinysrgb&w=1260&h=750&dpr=2",
  "https://images.pexels.com/photos/236748/pexels-photo-236748.jpeg?auto=compress&cs=tinysrgb&w=1260&h=750&dpr=2"
];

const features = [
  "Superior corrosion resistance for aggressive environments",
  "High-efficiency impeller design",
  "Low maintenance requirements",
  "Customizable configurations",
  "Quiet operation with minimal vibration"
];

const applications = [
  "Chemical processing plants",
  "Metal finishing facilities",
  "Wastewater treatment plants",
  "Laboratory exhaust systems",
  "Industrial ventilation"
];
---

<Layout 
  title="FRP Centrifugal Exhaustfan | N.A. Engineering Resources"
  description="High-performance FRP centrifugal exhaust fans designed for corrosive environments. Efficient and durable ventilation solutions for industrial applications."
>
  <div class="pt-20">
    <!-- Breadcrumb -->
    <div class="bg-gray-100 py-3">
      <div class="container mx-auto px-4">
        <nav class="flex" aria-label="Breadcrumb">
          <ol class="inline-flex items-center space-x-1 md:space-x-3">
            <li class="inline-flex items-center">
              <a href="/" class="text-gray-700 hover:text-primary-600 transition-colors">
                Home
              </a>
            </li>
            <li>
              <div class="flex items-center">
                <svg class="w-6 h-6 text-gray-400" fill="currentColor" viewBox="0 0 20 20" xmlns="http://www.w3.org/2000/svg">
                  <path fill-rule="evenodd" d="M7.293 14.707a1 1 0 010-1.414L10.586 10 7.293 6.707a1 1 0 011.414-1.414l4 4a1 1 0 010 1.414l-4 4a1 1 0 01-1.414 0z" clip-rule="evenodd"></path>
                </svg>
                <a href="/#products" class="ml-1 text-gray-700 hover:text-primary-600 transition-colors md:ml-2">
                  Products
                </a>
              </div>
            </li>
            <li aria-current="page">
              <div class="flex items-center">
                <svg class="w-6 h-6 text-gray-400" fill="currentColor" viewBox="0 0 20 20" xmlns="http://www.w3.org/2000/svg">
                  <path fill-rule="evenodd" d="M7.293 14.707a1 1 0 010-1.414L10.586 10 7.293 6.707a1 1 0 011.414-1.414l4 4a1 1 0 010 1.414l-4 4a1 1 0 01-1.414 0z" clip-rule="evenodd"></path>
