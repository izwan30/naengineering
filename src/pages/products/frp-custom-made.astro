---
import Layout from '../../layouts/Layout.astro';

const images = [
  "https://images.pexels.com/photos/1216589/pexels-photo-1216589.jpeg?auto=compress&cs=tinysrgb&w=1260&h=750&dpr=2",
  "https://images.pexels.com/photos/3846008/pexels-photo-3846008.jpeg?auto=compress&cs=tinysrgb&w=1260&h=750&dpr=2",
  "https://images.pexels.com/photos/2760243/pexels-photo-2760243.jpeg?auto=compress&cs=tinysrgb&w=1260&h=750&dpr=2",
  "https://images.pexels.com/photos/236748/pexels-photo-236748.jpeg?auto=compress&cs=tinysrgb&w=1260&h=750&dpr=2"
];

const features = [
  "Customized designs to meet specific requirements",
  "High-quality FRP materials for durability",
  "Expert engineering and fabrication",
  "Comprehensive project consultation",
  "Quality control throughout manufacturing"
];

const applications = [
  "Industrial equipment and machinery",
  "Architectural components",
  "Specialized storage solutions",
  "Custom transportation equipment",
  "Unique industrial applications"
];
---

<Layout 
  title="FRP Custom Made Solutions | N.A. Engineering Resources"
  description="Custom-designed FRP solutions tailored to your specific requirements. Expert engineering and fabrication for unique industrial applications."
>
  <div class="pt-20">
    <!-- Breadcrumb -->
    <div class="bg-gray-100 py-3">
      <div class="container mx-auto px-4">
        <nav class="flex" aria-label="Breadcrumb">
          <ol class="inline-flex items-center space-x-1 md:space-x-3">
            <li class="inline-flex items-center">
              <a href="/" class="text-gray-700 hover:text-primary-600 transition-colors">
                Home
              </a>
            </li>
            <li>
              <div class="flex items-center">
                <svg class="w-6 h-6 text-gray-400" fill="currentColor" viewBox="0 0 20 20" xmlns="http://www.w3.org/2000/svg">
                  <path fill-rule="evenodd" d="M7.293 14.707a1 1 0 010-1.414L10.586 10 7.293 6.707a1 1 0 011.414-1.414l4 4a1 1 0 010 1.414l-4 4a1 1 0 01-1.414 0z" clip-rule="evenodd"></path>
                </svg>
                <a href="/#products" class="ml-1 text-gray-700 hover:text-primary-600 transition-colors md:ml-2">
                  Products
                </a>
              </div>
            </li>
            <li aria-current="page">
              <div class="flex items-center">
                <svg class="w-6 h-6 text-gray-400" fill="currentColor" viewBox="0 0 20 20" xmlns="http://www.w3.org/2000/svg">
                  <path fill-rule="evenodd" d="M7.293 14.707a1 1 0 010-1.414L10.586 10 7.293 6.707a1 1 0 011.414-1.414l4 4a1 1 0 010 1.414l-4 4a1 1 0 01-1.414 0z" clip-rule="evenodd"></path>
                </svg>
                <span class="ml-1 text-gray-500 md:ml-2">FRP Custom Made</span>
              </div>
            </li>
          </ol>
        </nav>
      </div>
    </div>
    
    <!-- Product Header -->
    <div class="container mx-auto px-4 py-12">
      <div class="grid grid-cols-1 lg:grid-cols-2 gap-12">
        <!-- Product Gallery -->
        <div data-aos="fade-right">
          <div class="product-gallery">
            <div class="main-image mb-4 rounded-lg overflow-hidden shadow-lg">
              <img 
                id="mainImage" 
                src={images[0]} 
                alt="FRP Custom Made Solutions" 
                class="w-full h-96 object-cover"
              />
            </div>
            <div class="grid grid-cols-4 gap-2">
              {images.map((image, index) => (
                <div 
                  class="thumbnail-image cursor-pointer rounded-md overflow-hidden border-2 border-transparent hover:border-primary-500 transition-all"
                  data-image={image}
                >
                  <img 
                    src={image} 
                    alt={`FRP Custom Made thumbnail ${index + 1}`}
                    class="w-full h-24 object-cover"
                  />
                </div>
              ))}
            </div>
          </div>
        </div>
        
        <!-- Product Info -->
        <div data-aos="fade-left">
          <h1 class="text-3xl md:text-4xl font-bold text-gray-900 mb-4 font-heading">FRP Custom Made Solutions</h1>
          <div class="w-20 h-1 bg-primary-600 mb-6"></div>
          
          <p class="text-gray-600 mb-8">
            Our custom FRP fabrication service provides tailored solutions for unique industrial requirements. From concept to completion, we work closely with clients to design and manufacture high-quality FRP products that meet specific needs and performance criteria.
          </p>
          
          <div class="mb-8">
            <h2 class="text-xl font-bold mb-4 font-heading">Key Features</h2>
            <ul class="space-y-2">
              {features.map(feature => (
                <li class="flex items-start">
                  <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 text-primary-600 mr-2 mt-0.5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
                  </svg>
                  <span>{feature}</span>
                </li>
              ))}
            </ul>
          </div>
          
          <div class="mb-8">
            <h2 class="text-xl font-bold mb-4 font-heading">Applications</h2>
            <ul class="space-y-2">
              {applications.map(application => (
                <li class="flex items-start">
                  <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 text-accent-600 mr-2 mt-0.5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
                  </svg>
                  <span>{application}</span>
                </li>
              ))}
            </ul>
          </div>
          
          <div class="flex flex-wrap gap-4">
            <a 
              href="/#contact" 
              class="inline-block bg-primary-600 hover:bg-primary-700 text-white font-medium px-6 py-3 rounded-md transition-colors"
            >
              Request a Quote
            </a>
            <a 
              href="https://wa.me/60167904264" 
              target="_blank" 
              rel="noopener noreferrer" 
              class="inline-block bg-green-500 hover:bg-green-600 text-white font-medium px-6 py-3 rounded-md transition-colors flex items-center"
            >
              <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 mr-2" fill="currentColor" viewBox="0 0 24 24">
                <path d="M.057 24l1.687-6.163c-1.041-1.804-1.588-3.849-1.587-5.946.003-6.556 5.338-11.891 11.893-11.891 3.181.001 6.167 1.24 8.413 3.488 2.245 2.248 3.481 5.236 3.48 8.414-.003 6.557-5.338 11.892-11.893 11.892-1.99-.001-3.951-.5-5.688-1.448l-6.305 1.654zm6.597-3.807c1.676.995 3.276 1.591 5.392 1.592 5.448 0 9.886-4.434 9.889-9.885.002-5.462-4.415-9.89-9.881-9.892-5.452 0-9.887 4.434-9.889 9.884-.001 2.225.651 3.891 1.746 5.634l-.999 3.648 3.742-.981zm11.387-5.464c-.074-.124-.272-.198-.57-.347-.297-.149-1.758-.868-2.031-.967-.272-.099-.47-.149-.669.149-.198.297-.768.967-.941 1.165-.173.198-.347.223-.644.074-.297-.149-1.255-.462-2.39-1.475-.883-.788-1.48-1.761-1.653-2.059-.173-.297-.018-.458.13-.606.134-.133.297-.347.446-.521.151-.172.2-.296.3-.495.099-.198.05-.372-.025-.521-.075-.148-.669-1.611-.916-2.206-.242-.579-.487-.501-.669-.51l-.57-.01c-.198 0-.52.074-.792.372s-1.04 1.016-1.04 2.479 1.065 2.876 1.213 3.074c.149.198 2.095 3.2 5.076 4.487.709.306 1.263.489 1.694.626.712.226 1.36.194 1.872.118.571-.085 1.758-.719 2.006-1.413.248-.695.248-1.29.173-1.414z"/>
              </svg>
              Contact via WhatsApp
            </a>
          </div>
        </div>
      </div>
    </div>
    
    <!-- Technical Specifications -->
    <div class="bg-gray-50 py-16">
      <div class="container mx-auto px-4">
        <h2 class="text-3xl font-bold text-gray-900 mb-8 text-center font-heading" data-aos="fade-up">Our Process</h2>
        
        <div class="bg-white rounded-lg shadow-lg p-8 mb-12" data-aos="fade-up">
          <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-8">
            <div class="text-center">
              <div class="w-16 h-16 bg-primary-100 rounded-full flex items-center justify-center mx-auto mb-4">
                <span class="text-2xl font-bold text-primary-600">1</span>
              </div>
              <h3 class="text-lg font-bold mb-2">Consultation</h3>
              <p class="text-gray-600">Initial discussion to understand your requirements and specifications</p>
            </div>
            
            <div class="text-center">
              <div class="w-16 h-16 bg-primary-100 rounded-full flex items-center justify-center mx-auto mb-4">
                <span class="text-2xl font-bold text-primary-600">2</span>
              </div>
              <h3 class="text-lg font-bold mb-2">Design</h3>
              <p class="text-gray-600">Detailed engineering and design phase with 3D modeling if required</p>
            </div>
            
            <div class="text-center">
              <div class="w-16 h-16 bg-primary-100 rounded-full flex items-center justify-center mx-auto mb-4">
                <span class="text-2xl font-bold text-primary-600">3</span>
              </div>
              <h3 class="text-lg font-bold mb-2">Fabrication</h3>
              <p class="text-gray-600">Manufacturing with strict quality control and testing procedures</p>
            </div>
            
            <div class="text-center">
              <div class="w-16 h-16 bg-primary-100 rounded-full flex items-center justify-center mx-auto mb-4">
                <span class="text-2xl font-bold text-primary-600">4</span>
              </div>
              <h3 class="text-lg font-bold mb-2">Installation</h3>
              <p class="text-gray-600">Professional installation and commissioning services</p>
            </div>
          </div>
        </div>
        
        <!-- Related Products -->
        <div data-aos="fade-up">
          <h2 class="text-2xl font-bold text-gray-900 mb-6 font-heading">Related Products</h2>
          <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
            <a href="/products/frp-tanks" class="bg-white rounded-lg shadow-md overflow-hidden hover:shadow-lg transition-shadow">
              <img 
                src="https://images.pexels.com/photos/2760241/pexels-photo-2760241.jpeg?auto=compress&cs=tinysrgb&w=1260&h=750&dpr=2" 
                alt="FRP Tanks" 
                class="w-full h-48 object-cover"
              />
              <div class="p-4">
                <h3 class="font-bold text-lg mb-2">FRP Tanks</h3>
                <p class="text-gray-600 text-sm">Custom storage solutions for various industrial applications.</p>
              </div>
            </a>
            <a href="/products/frp-ducting-pipe" class="bg-white rounded-lg shadow-md overflow-hidden hover:shadow-lg transition-shadow">
              <img 
                src="https://images.pexels.com/photos/2219024/pexels-photo-2219024.jpeg?auto=compress&cs=tinysrgb&w=1260&h=750&dpr=2" 
                alt="FRP Ducting & Pipe" 
                class="w-full h-48 object-cover"
              />
              <div class="p-4">
                <h3 class="font-bold text-lg mb-2">FRP Ducting & Pipe</h3>
                <p class="text-gray-600 text-sm">Custom piping solutions for specific requirements.</p>
              </div>
            </a>
            <a href="/products/frp-water-slide" class="bg-white rounded-lg shadow-md overflow-hidden hover:shadow-lg transition-shadow">
              <img 
                src="https://images.pexels.com/photos/2499778/pexels-photo-2499778.jpeg?auto=compress&cs=tinysrgb&w=1260&h=750&dpr=2" 
                alt="FRP Water Slide" 
                class="w-full h-48 object-cover"
              />
              <div class="p-4">
                <h3 class="font-bold text-lg mb-2">FRP Water Slide</h3>
                <p class="text-gray-600 text-sm">Custom-designed water slides for aquatic facilities.</p>
              </div>
            </a>
          </div>
        </div>
      </div>
    </div>
  </div>
</Layout>

<script is:inline>
  document.addEventListener('DOMContentLoaded', () => {
    const mainImage = document.getElementById('mainImage');
    const thumbnails = document.querySelectorAll('.thumbnail-image');
    
    thumbnails.forEach(thumbnail => {
      thumbnail.addEventListener('click', () => {
        const imageUrl = thumbnail.getAttribute('data-image');
        mainImage.src = imageUrl;
        
        // Update active thumbnail
        thumbnails.forEach(thumb => {
          thumb.classList.remove('border-primary-500');
          thumb.classList.add('border-transparent');
        });
        thumbnail.classList.remove('border-transparent');
        thumbnail.classList.add('border-primary-500');
      });
    });
    
    // Set first thumbnail as active by default
    if (thumbnails.length > 0) {
      thumbnails[0].classList.remove('border-transparent');
      thumbnails[0].classList.add('border-primary-500');
    }
  });
</script>