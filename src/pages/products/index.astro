    image: "https://images.pexels.com/photos/1108101/pexels-photo-1108101.jpeg?auto=compress&cs=tinysrgb&w=1260&h=750&dpr=2",
    link: "/products/frp-cone-tanks"
  },
  {
    name: "FRP Centrifugal Exhaustfan",
    description: "Corrosion-resistant exhaust fans for ventilation systems in chemical processing and industrial environments.",
    image: "https://images.pexels.com/photos/4062567/pexels-photo-4062567.jpeg?auto=compress&cs=tinysrgb&w=1260&h=750&dpr=2",
    link: "/products/frp-centrifugal-exhaustfan"
