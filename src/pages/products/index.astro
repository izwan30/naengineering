---
import Layout from '../../layouts/Layout.astro';

const products = [
  {
    name: "FRP Wet Scrubber",
    description: "High-efficiency air pollution control devices designed for removing particulates and gases from industrial exhaust streams.",
    image: "https://images.pexels.com/photos/2760243/pexels-photo-2760243.jpeg?auto=compress&cs=tinysrgb&w=1260&h=750&dpr=2",
    link: "/products/frp-wet-scrubber"
  },
  {
    name: "FRP Ducting & Pipe",
    description: "Corrosion-resistant ducting systems for air handling and pipe systems for fluid transport in chemical environments.",
    image: "https://images.pexels.com/photos/2219024/pexels-photo-2219024.jpeg?auto=compress&cs=tinysrgb&w=1260&h=750&dpr=2",
    link: "/products/frp-ducting-pipe"
  },
  {
    name: "FRP Water Slide",
    description: "Custom-designed, durable water slides for aquatic facilities, featuring vibrant colors and smooth, safe surfaces.",
    image: "https://images.pexels.com/photos/2499778/pexels-photo-2499778.jpeg?auto=compress&cs=tinysrgb&w=1260&h=750&dpr=2",
    link: "/products/frp-water-slide"
  },
  {
    name: "FRP Fitting & Connector",
    description: "High-quality fittings and connectors designed for use with FRP piping systems in corrosive environments.",
    image: "https://images.pexels.com/photos/416405/pexels-photo-416405.jpeg?auto=compress&cs=tinysrgb&w=1260&h=750&dpr=2",
    link: "/products/frp-fitting-connector"
  },
  {
    name: "FRP Custom Made",
    description: "Bespoke FRP solutions tailored to your specific requirements, from custom shapes to specialized applications.",
    image: "https://images.pexels.com/photos/1216589/pexels-photo-1216589.jpeg?auto=compress&cs=tinysrgb&w=1260&h=750&dpr=2",
    link: "/products/frp-custom-made"
  },
  {
    name: "FRP Lining & Coating",
    description: "Protective linings and coatings for tanks, vessels, and equipment exposed to corrosive chemicals.",
    image: "https://images.pexels.com/photos/912110/pexels-photo-912110.jpeg?auto=compress&cs=tinysrgb&w=1260&h=750&dpr=2",
    link: "/products/frp-lining-coating"
  },
  {
    name: "FRP Round Tanks",
    description: "Corrosion-resistant storage solutions for various chemicals and liquids, designed for durability and reliability.",
    image: "https://images.pexels.com/photos/2760241/pexels-photo-2760241.jpeg?auto=compress&cs=tinysrgb&w=1260&h=750&dpr=2",
    link: "/products/frp-tanks"
  },
  {
    name: "FRP Square Tanks",
    description: "Space-efficient square and rectangular tanks for storage of corrosive materials in industrial applications.",
    image: "https://images.pexels.com/photos/162568/oil-industry-oil-rig-equipment-clouds-162568.jpeg?auto=compress&cs=tinysrgb&w=1260&h=750&dpr=2",
    link: "/products/frp-square-tanks"
  },
  {
    name: "FRP Cone Tanks",
